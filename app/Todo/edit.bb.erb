<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @todo.object %>
    <h1>Edit <%= @todo.content%></h1>
    <%= link_to "Delete", :action => :delete, :id => @todo.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @todo.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Content: </td>
              <td class="itemValue"><input type="text" name="todo[content]" value="<%= @todo.content %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Done: </td>
              <td class="itemValue"><input type="text" name="todo[done]" value="<%= @todo.done %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
